{
  "name": "studio",
  "routes": {
    "workspace": {
      "title": "Workspace",
      "icon": "dashboard",
      "path": "/workspace",
      "layoutBackground": "#f5f500",
      "cover": {
        "backgroundColor": "#00838F",
        "navigation": true,
        "type": "menu"
      },
      "startOperationsOnMount": false,
      "operations": {
        "syncSession": [
          "rest://create/studio/sessions#newSession",
          {
            "onSuccess": "sessionSynced",
            "onError": "failedToSyncSession"
          }
        ],
        "refreshAccount": [
          "firebase://retrieve/users/:userId#getAccount",
          {
            "onSuccess": "accountSuccess",
            "onError": "accountError"
          }
        ],
        "refreshProfile": [
          "firebase://retrieve/users-profiles/:userId?latest=1&resolve=profiles#getProfile",
          {
            "onSuccess": "profileSuccess",
            "onError": "accountError"
          }
        ],
        "refreshWallet": [
          "firebase://retrieve/users-wallets/:userId?latest=1&resolve=wallets#wallet",
          {
            "onSuccess": "walletSuccess",
            "onError": "accountError"
          }
        ],
        "sendTokens": [
          "rest://create/wallet/send#sendTokens",
          {
            "onSuccess": "tokensSent",
            "onError": "failedToSendTokens"
          }
        ]
      }
    },
    "notifications": {
      "title": "Notifications",
      "icon": "notifications",
      "path": "/notifications",
      "startOperationsOnMount": false
    },
    "support": {
      "title": "Support",
      "icon": "help",
      "path": "/support",
      "startOperationsOnMount": false
    },
    "feedback": {
      "title": "Feedback",
      "icon": "feedback",
      "path": "/feedback",
      "startOperationsOnMount": false
    },
    "resources": {
      "title": "Resources",
      "icon": "library_books",
      "path": "/resources",
      "startOperationsOnMount": false
    },
    "achievements": {
      "title": "achievements",
      "icon": "stars",
      "path": "/achievements",
      "startOperationsOnMount": false,
      "operations": {
        "refreshWallet": [
          "firebase://retrieve/users-wallets/:userId?latest=1&resolve=wallets#getWallet",
          {
            "onSuccess": "refreshedWallet",
            "onError": "failedToRefreshWallet"
          }
        ]
      }
    },
    "bounties": {
      "title": "Bounties",
      "icon": "monetization_on",
      "path": "/bounties",
      "startOperationsOnMount": false,
      "operations": {
        "refreshWallet": [
          "firebase://retrieve/users-wallets/:userId?latest=1&resolve=wallets#getWallet",
          {
            "onSuccess": "refreshedWallet",
            "onError": "failedToRefreshWallet"
          }
        ]
      }
    },
    "new": {
      "title": "New Product",
      "icon": "appstore",
      "path": "/new",
      "layoutBackground": "#f5f500",
      "cover": {
        "backgroundColor": "#00838F",
        "navigation": true,
        "type": "menu"
      }
    },
    "main": {
      "title": "Download",
      "icon": "home",
      "path": "/download",
      "cover": {
        "backgroundColor": "#00838F",
        "opacity": 0.6,
        "navigation": true,
        "image": "background-default.r.png",
        "title": "Download the #CarmelStudio",
        "type": "default"
      },
      "components": {
        "intro": {
          "source": "summary",
          "text": "dropbox://stjnmx5sb1rpjbq/contentFromDropbox.md?dl=0",
          "image": "carmel-logo.png",
          "textColor": "#37474F"
        }
      }
    }
  },
  "service": {
    "functions": [
      "post://sessions#syncSession"
    ],
    "dependencies": {
      "moment": "latest"
    },
    "requiredFields": {},
    "permissions": {},
    "schedule": {}
  }
}
