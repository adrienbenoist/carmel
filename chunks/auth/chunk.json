{
  "name": "auth",
  "routes": {
    "register": {
      "title": "Join Now",
      "icon": "account_circle",
      "action": true,
      "alwaysShowIcon": true,
      "guestOnly": true,
      "path": "/register",
      "recaptchaKey": "6Lex_1AUAAAAALdQO95hdq9WeiG_tbKbhF2WDB3s",
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.5,
        "image": "background-stars.r.png",
        "navigation": true,
        "title": "Join the Carmel Revolution",
        "type": "simple"
      },
      "startOperationsOnMount": false,
      "operations": {
        "register": [
          "firebase://register#register",
          {
            "onSuccess": "setup",
            "onError": "registerError"
          }
        ],
        "setup": [
          "rest://create/auth/setup#setup",
          {
            "onSuccess": "registerOk",
            "onError": "registerError"
          }
        ]
      }
    },
    "login": {
      "title": "Account",
      "icon": "account_circle",
      "alwaysShowIcon": true,
      "guestOnly": true,
      "path": "/login",
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.5,
        "image": "background-stars.r.png",
        "navigation": true,
        "title": "Welcome back to Carmel",
        "type": "simple"
      },
      "startOperationsOnMount": false,
      "operations": {
        "login": [
          "firebase://login",
          {
            "onSuccess": "loginOk",
            "onError": "loginError"
          }
        ],
        "getProfile": [
          "firebase://retrieve/users-profiles/:userId?latest=1&resolve=profiles#getProfile",
          {
            "onSuccess": "profileOk",
            "onError": "loginError"
          }
        ],
        "getAccount": [
          "firebase://retrieve/users/:userId?latest=1#getAccount",
          {
            "onSuccess": "accountOk",
            "onError": "accountError"
          }
        ]
      }
    },
    "reset": {
      "title": "Account",
      "icon": "account_circle",
      "alwaysShowIcon": true,
      "path": "/reset",
      "cover": {
        "backgroundColor": "#00838F",
        "align": "bottom",
        "opacity": 0.5,
        "image": "background-stars.r.png",
        "navigation": true,
        "title": "Get back into your Carmel account",
        "type": "simple"
      },
      "startOperationsOnMount": false,
      "operations": {
        "reset": [
          "firebase://reset",
          {
            "onSuccess": "resetOk",
            "onError": "resetError"
          }
        ]
      }
    },
    "account": {
      "title": "Account",
      "icon": "user",
      "alwaysShowIcon": true,
      "private": true,
      "path": "/me",
      "cover": {
        "backgroundColor": "#00838F",
        "navigation": true,
        "type": "menu"
      },
      "startOperationsOnMount": false,
      "operations": {
        "twitterAuth": [
          "rest://create/auth/twitter-reverse",
          {
            "onSuccess": "twitterAuthOk",
            "onError": "twitterError"
          }
        ],
        "twitterVerify": [
          "rest://create/auth/twitter",
          {
            "onSuccess": "twitterOk",
            "onError": "twitterError"
          }
        ],
        "telegramVerify": [
          "rest://create/auth/telegram",
          {
            "onSuccess": "telegramOk",
            "onError": "telegramError"
          }
        ],
        "getUserProfile": [
          "firebase://retrieve/users-profiles/:userId?latest=1&resolve=profiles#getProfile",
          {
            "onSuccess": "profileOk",
            "onError": "profileError"
          }
        ],
        "updateUser": [
          "rest://create/auth/update#updateUser",
          {
            "onSuccess": "updateUserOk",
            "onError": "updateUserError"
          }
        ],
        "reset": [
          "firebase://reset",
          {
            "onSuccess": "accountOk",
            "onError": "okError"
          }
        ],
        "refreshWallet": [
          "firebase://retrieve/users-wallets/:userId?latest=1&resolve=wallets#wallet",
          {
            "onSuccess": "refreshedWallet",
            "onError": "failedToRefreshWallet"
          }
        ],
        "getAccount": "firebase://subscribe/users/:userId?#getAccount",
        "getProfile": "firebase://subscribe/users-profiles/:userId?latest=1&resolve=profiles#getProfile"
      },
      "subscriptions": [
        "getAccount",
        "getProfile"
      ]
    },
    "profile": {
      "title": "Profile",
      "icon": "user",
      "alwaysShowIcon": true,
      "path": "/profile",
      "cover": {
        "backgroundColor": "#00838F",
        "navigation": true,
        "type": "menu"
      },
      "startOperationsOnMount": false,
      "operations": {
        "refreshProfile": [
          "firebase://retrieve/users-profiles/:userId?latest=1&resolve=profiles#getProfile",
          {
            "onSuccess": "profileSuccess",
            "onError": "profileError"
          }
        ],
        "refreshWallet": [
          "firebase://retrieve/users-wallets/:userId?latest=1&resolve=wallets#wallet",
          {
            "onSuccess": "walletSuccess",
            "onError": "walletError"
          }
        ]
      }
    }
  },
  "service": {
    "functions": [
      "post://users#getUser",
      "post://setup#setup",
      "post://twitter#twitter",
      "post://twitter-reverse#twitterReverse",
      "post://update#updateProfile"
    ],
    "dependencies": {
      "twitter": "latest",
      "oauth": "latest"
    },
    "requiredFields": {
      "twitter": [
        "oauthTokens"
      ]
    },
    "permissions": {
      "setup": [
        "ses:SendEmail"
      ]
    },
    "schedule": {}
  }
}
